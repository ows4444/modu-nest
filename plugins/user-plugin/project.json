{
  "name": "user-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "plugins/user-plugin/src",
  "projectType": "library",
  "targets": {
    "plugin-build": {
      "executor": "@modu-nest/plugin:plugin-build",
      "options": {
        "outputPath": "dist",
        "tsConfig": "tsconfig.lib.json",
        "assets": ["plugin.manifest.json"]
      },
      "dependsOn": ["@modu-nest/plugin-types:typecheck"]
    },
    "plugin-validate": {
      "executor": "@modu-nest/plugin:plugin-validate",
      "options": {
        "tsConfig": "tsconfig.lib.json"
      }
    },
    "plugin-zip": {
      "executor": "@modu-nest/plugin:plugin-zip",
      "options": {
        "inputPath": "dist",
        "outputPath": "releases",
        "includeSourceMaps": false
      },
      "dependsOn": ["plugin-build"]
    },
    "plugin-publish": {
      "executor": "@modu-nest/plugin:plugin-publish",
      "options": {
        "outputPath": "dist",
        "pluginsDir": "apps/plugin-host/src/assets/plugins",
        "useZip": true,
        "zipPath": "releases"
      },
      "dependsOn": ["plugin-zip"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["plugins/user-plugin/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "plugins/user-plugin/jest.config.ts"
      }
    }
  },
  "tags": ["type:plugin"]
}
