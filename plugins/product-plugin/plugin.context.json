{
  "name": "product-plugin",
  "version": "1.0.0",
  "fileAccess": {
    "allowedExtensions": [".json", ".csv", ".txt", ".xml", ".yaml", ".jpg", ".png"],
    "maxFileSize": 20971520,
    "allowWrite": true,
    "allowDelete": false,
    "allowExecute": false
  },
  "networkAccess": {
    "allowedDomains": ["api.example.com", "product-api.com", "inventory.service.com", "api.github.com"],
    "blockedDomains": [],
    "allowedPorts": [80, 443, 8080],
    "blockedPorts": [],
    "maxRequestSize": 5242880,
    "requestTimeout": 30000,
    "rateLimits": {
      "requestsPerMinute": 100,
      "requestsPerHour": 2000,
      "dailyBandwidthLimit": 209715200
    },
    "allowedMethods": ["GET", "POST", "PUT", "DELETE"],
    "allowedProtocols": ["https", "http"]
  },
  "databaseAccess": {
    "allowedDatabases": ["plugin_data"],
    "allowedTables": ["products", "product_categories", "inventory"],
    "allowedOperations": ["SELECT", "INSERT", "UPDATE", "DELETE"],
    "maxQueryComplexity": 150,
    "queryTimeout": 45000,
    "maxResultSize": 2000,
    "allowTransactions": true,
    "allowStoredProcedures": false,
    "connectionPoolSize": 8
  },
  "resourceLimits": {
    "maxMemoryUsage": 536870912,
    "maxCpuTime": 10000,
    "maxExecutionTime": 60000,
    "maxConcurrentOperations": 15
  },
  "sandbox": {
    "enabled": true,
    "isolateMemory": true,
    "restrictSystemCalls": true
  },
  "logging": {
    "level": "info",
    "maxLogSize": 104857600,
    "enableMetrics": true
  },
  "environment": {
    "canReadEnvVars": true,
    "allowedEnvVars": ["PRODUCT_STORAGE_PATH", "MAX_PRODUCT_IMAGES"]
  },
  "config": {
    "maxProducts": 50000,
    "imageProcessing": {
      "maxWidth": 1920,
      "maxHeight": 1080,
      "quality": 85
    },
    "categories": ["electronics", "clothing", "books", "home"]
  }
}
