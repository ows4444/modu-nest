{
  "files.autoSave": "off",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.git/**": true,
    "**/out-tsc": true,
    ".yarn*": true
  },
  "search.exclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.git/**": true,
    "**/out-tsc/**": true,
    ".env": true,
    ".env.*": true
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.ts, ${capture}.spec.ts"
  },
  "explorer.sortOrder": "modified",
  "files.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".yarn*": true,
    // ".vscode": true,
    // ".nx": true,
    // ".husky": true,
    "apps/**/*-e2e": true,
    // "apps/**/assets": true,
    // "apps/**/webpack.config.js": true,
    // "{apps,libs}/**/.spec.swcrc": true,
    // "{apps,libs}/**/tsconfig.json": true,
    // // "{apps,libs}/**/package.json": true,
    // // "{apps,libs}/**/eslint.config.mjs": true,
    // "{apps,libs}/**/jest.config.ts": true,
    // "{apps,libs}/**/README.md": true,
    // "tsconfig.json": true,
    // "eslint.config.mjs": true,
    // "jest.*": true,
    // "*.lock": true,
    // ".prettier*": true,
    // "tools": true,
    // "**/dist": true,
    "tmp": true,
    "**/out-tsc": true,
    "**/node_modules": true
  },
  "nxConsole.generateAiAgentRules": true,
  "cSpell.words": ["Modu"],
  "eslint.useFlatConfig": true,
  "eslint.enable": true,
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.validate": ["typescript", "javascript"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  }
}
