{
  "files.autoSave": "off",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.git/**": true,
    "**/out-tsc": true,
    ".yarn*": true
  },
  "search.exclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.git/**": true,
    "**/out-tsc/**": true,
    ".env": true,
    ".env.*": true
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.ts, ${capture}.spec.ts"
  },
  "explorer.sortOrder": "modified",
  "files.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".yarn*": true,
    ".nx": true,
    "**/dist": true,
    // "apps/**/*-e2e": true,
    "tmp": true,
    "**/out-tsc": true,
    "**/node_modules": true
  },
  "nxConsole.generateAiAgentRules": true,
  "cSpell.words": ["modu"],
  "eslint.useFlatConfig": true,
  "eslint.enable": true,
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "eslint.validate": ["typescript", "javascript", "json"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  }
}
