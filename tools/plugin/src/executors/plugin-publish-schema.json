{
  "$schema": "https://json-schema.org/schema",
  "version": 2,
  "title": "Plugin Publish executor",
  "description": "Schema for plugin publish executor",
  "type": "object",
  "properties": {
    "outputPath": {
      "type": "string",
      "description": "Build output directory to publish from",
      "default": "dist"
    },
    "pluginsDir": {
      "type": "string",
      "description": "Directory to publish plugin to",
      "default": "./plugins"
    },
    "useZip": {
      "type": "boolean",
      "description": "Use ZIP-based deployment instead of directory copying",
      "default": true
    },
    "zipPath": {
      "type": "string",
      "description": "Directory containing ZIP packages",
      "default": "releases"
    },
    "keepZipFile": {
      "type": "boolean",
      "description": "Keep ZIP file instead of extracting (requires plugin-loader ZIP support)",
      "default": true
    }
  },
  "required": []
}
