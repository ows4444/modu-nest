{
  "$schema": "https://json-schema.org/schema",
  "version": 2,
  "title": "Plugin Build executor",
  "description": "Schema for plugin build executor",
  "type": "object",
  "properties": {
    "outputPath": {
      "type": "string",
      "description": "Output directory for built plugin",
      "default": "dist"
    },
    "tsConfig": {
      "type": "string",
      "description": "Path to TypeScript configuration file",
      "default": "tsconfig.json"
    },
    "assets": {
      "type": "array",
      "description": "Assets to copy to output directory",
      "items": {
        "type": "string"
      },
      "default": ["plugin.manifest.json"]
    },
    "validateManifest": {
      "type": "boolean",
      "description": "Validate plugin manifest during build",
      "default": true
    },
    "production": {
      "type": "boolean",
      "description": "Build in production mode with optimizations",
      "default": true
    },
    "minify": {
      "type": "boolean",
      "description": "Minify JavaScript output (requires production mode)",
      "default": true
    }
  },
  "required": []
}
